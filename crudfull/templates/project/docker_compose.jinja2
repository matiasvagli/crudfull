services:
  app:
    build: .
    ports:
      - "8000:8000"
    volumes:
      - .:/app
    command: uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload
    {% if db != 'ghost' %}
    depends_on:
      - db
    environment:
      {% if db == 'sql' %}
      - DATABASE_URL=postgresql+asyncpg://produser:prodpass@db:5432/proddb
      {% elif db == 'mongo' %}
      - MONGO_URL=mongodb://produser:prodpass@db:27017
      {% endif %}
    {% endif %}

  {% if db == 'sql' %}
  db:
    image: postgres:15-alpine
    restart: always
    environment:
      POSTGRES_USER: produser
      POSTGRES_PASSWORD: prodpass
      POSTGRES_DB: proddb
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
  {% elif db == 'mongo' %}
  db:
    image: mongo:7
    restart: always
    environment:
      MONGO_INITDB_ROOT_USERNAME: produser
      MONGO_INITDB_ROOT_PASSWORD: prodpass
    ports:
      - "27017:27017"
    volumes:
      - mongo_data:/data/db
  {% endif %}

volumes:
  {% if db == 'sql' %}
  postgres_data:
  {% elif db == 'mongo' %}
  mongo_data:
  {% endif %}
