@asynccontextmanager
async def lifespan(app: FastAPI):
    # Startup
    {% if db != 'ghost' %}
    await init_db()
    {% endif %}
    yield
    # Shutdown
    pass

app = FastAPI(
    title="{{ project_name }}",
    lifespan=lifespan
)

# Mount static files (logos, CSS, etc.)
if os.path.exists("static"):
    app.mount("/static", StaticFiles(directory="static"), name="static")

